{
  "name": "instantboard-client",
  "version": "1.0.0",
  "description": "Instantboard client",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "browserify ./src/index.tsx -p [tsify -p ./tsconfig.client.json] -o ./dist/public/bundle.js",
    "bundle:scripts:watch": "watchify ./src/index.tsx -p [tsify -p ./tsconfig.client.json] -o ./dist/public/bundle.js",
    "build:styles": "postcss -c .postcssrc.js src/styles/index.css -o dist/public/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/styles/index.css -o dist/public/index.css",
    "server:dev": "browser-sync start --server dist --files dist/**/* --no-open --no-ui --no-ghost-mode --no-notify",
    "server": "nodemon dist/server.js",
    "build": "npm run clean && (npm run bundle:scripts & npm run build:styles)",
    "dev": "npm run clean && npm run compile:scripts && concurrently 'npm run compile:scripts:watch' 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'nodemon dist/server.js'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/prop-types": "^15.5.1",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "deep-assign": "^2.0.0",
    "express": "^4.15.4",
    "nodemon": "^1.11.0",
    "postcss-cli": "^4.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-nested": "^2.1.0",
    "postcss-simple-vars": "^4.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "tsify": "^3.0.1",
    "typescript": "^2.4.2",
    "watchify": "^3.9.0"
  },
  "devDependencies": {
    "@types/react": "^16.0.1",
    "@types/react-dom": "^15.5.2"
  }
}
