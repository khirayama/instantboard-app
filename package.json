{
  "name": "instantboard-client",
  "version": "1.0.0",
  "description": "Instantboard client",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "browserify ./src/index.web.tsx -p [tsify -p ./tsconfig.client.json] -o ./dist/public/bundle.js",
    "bundle:scripts:watch": "watchify ./src/index.web.tsx -p [tsify -p ./tsconfig.client.json] -o ./dist/public/bundle.js",
    "build:styles": "postcss -c .postcssrc.js src/styles/index.css -o dist/public/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/styles/index.css -o dist/public/index.css",
    "copy:files": "cpx 'src/**/*.{json,woff2,png}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png}' dist",
    "server:dev": "browser-sync start --server dist --files dist/**/* --no-open --no-ui --no-ghost-mode --no-notify",
    "server": "nodemon dist/index.server.js",
    "build": "npm run clean && (npm run bundle:scripts & npm run build:styles)",
    "dev": "npm run clean && npm run compile:scripts && concurrently 'npm run compile:scripts:watch' 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'nodemon dist/index.server.js'",
    "lint": "tslint 'src/**/*.+(ts|tsx)'",
    "lint:fix": "tslint --fix 'src/**/*.+(ts|tsx)'",
    "lint:beta": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-path src/**/*.d.ts src",
    "lint:fix:beta": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-path src/**/*.d.ts --rule 'react/jsx-index: 0' --rule 'react/jsx-closing-bracket-location: 0' --rule 'react/jsx-closing-tag-location: 0' --fix src",
    "check": "npm-check-updates"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pino": "^4.7.0",
    "@types/prop-types": "^15.5.1",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "deep-assign": "^2.0.0",
    "eslint": "^4.5.0",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-config-xo-space": "^0.16.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "eslint-plugin-typescript": "^0.5.0",
    "express": "^4.15.4",
    "nodemon": "^1.11.0",
    "npm-check-updates": "^2.12.1",
    "pino": "^4.7.1",
    "postcss-cli": "^4.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-nested": "^2.1.0",
    "postcss-simple-vars": "^4.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-addons-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "tsify": "^3.0.1",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^6.0.1",
    "uuid": "^3.1.0",
    "watchify": "^3.9.0"
  },
  "devDependencies": {
    "@types/react": "^16.0.1",
    "@types/react-dom": "^15.5.2"
  }
}
