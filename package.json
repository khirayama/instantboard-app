{
  "name": "instantboard-app",
  "version": "1.0.0",
  "description": "Instantboard App",
  "main": "dist/index.js",
  "author": "khirayama",
  "engines": {
    "node": "9.4.0"
  },
  "scripts": {
    "start": "npm run server",
    "clean": "rm -rf dist",
    "compress": "node bin/compress.js ./dist/public",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "browserify ./src/index.web.tsx -g [ envify --NODE_ENV production ] -g uglifyify -p [tsify -p ./tsconfig.web.json] -p bundle-collapser/plugin | uglifyjs --compress --mangle safari10=true > ./dist/public/bundle.js",
    "bundle:scripts:analyze": "rm -rf tmp* && NODE_ENV=production browserify --debug ./src/index.web.tsx -g [ envify --NODE_ENV production ] -g uglifyify -p [tsify -p ./tsconfig.web.json] -p bundle-collapser/plugin | uglifyjs --compress --mangle safari10=true --source-map \"content=inline\" -o ./tmp.js && source-map-explorer tmp.js tmp.js.map",
    "bundle:scripts:watch": "watchify ./src/index.web.tsx -t envify -p [tsify -p ./tsconfig.web.json] -o ./dist/public/bundle.js",
    "build:styles": "postcss -c .postcssrc.js src/presentations/index.css -o dist/public/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/presentations/index.css -o dist/public/index.css",
    "build:images": "node bin/minimize-images.js",
    "copy:files": "cpx 'src/**/*.{json,woff2,png,ico,wepb,js}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png,ico,webp,js}' dist",
    "server": "forever --silent dist/index.server.js",
    "build": "npm run clean && npm run compile:scripts && npm run build:styles && npm run bundle:scripts && npm run copy:files && npm run compress",
    "dev": "npm run clean && concurrently 'npm run compile:scripts' 'npm run build:styles' && concurrently 'npm run copy:files:watch' 'npm run compile:scripts:watch' 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'nodemon dist/index.server.js'",
    "lint": "eslint --fix --ext .ts --ext .tsx --ignore-path .gitignore --ignore-path src/**/*.d.ts src",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.html|*.png|*.webp)'",
    "precommit": "npm run lint && npm run format",
    "refactor": "git grep -l any src/services src/presentations/containers src/reducers/ src/index.web.tsx src/action-creators",
    "check": "npm-check-updates"
  },
  "pre-commit": [
    "precommit"
  ],
  "dependencies": {
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.4",
    "axios": "0.18.0",
    "browserify": "16.1.1",
    "bundle-collapser": "1.3.0",
    "classnames": "2.2.5",
    "concurrently": "3.5.1",
    "cpx": "1.5.0",
    "cssnano": "3.10.0",
    "deep-equal": "1.0.1",
    "envify": "4.1.0",
    "eslint": "4.18.2",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-xo-react": "0.16.0",
    "eslint-config-xo-space": "0.18.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-typescript": "0.10.0",
    "fastify": "1.1.1",
    "forever": "0.15.3",
    "fuse.js": "3.2.0",
    "minimist": "1.2.0",
    "node-zopfli": "2.0.2",
    "nodemon": "1.17.1",
    "npm-check-updates": "2.14.1",
    "postcss-cli": "5.0.0",
    "postcss-easy-import": "3.0.0",
    "postcss-nested": "3.0.0",
    "postcss-simple-vars": "4.1.0",
    "pre-commit": "1.2.2",
    "prettier": "1.11.1",
    "prop-types": "15.6.1",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-transition-group": "2.2.1",
    "serve-static": "1.13.2",
    "source-map-explorer": "1.5.0",
    "tsify": "3.0.4",
    "typescript": "2.7.2",
    "typescript-eslint-parser": "14.0.0",
    "uglify-es": "3.3.10",
    "uglifyify": "4.0.5",
    "watchify": "3.11.0"
  },
  "devDependencies": {
    "imagemin": "5.3.1",
    "imagemin-jpegtran": "5.0.2",
    "imagemin-pngquant": "5.0.1",
    "imagemin-webp": "4.1.0"
  }
}
