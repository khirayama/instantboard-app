{
  "name": "instantboard-client",
  "version": "1.0.0",
  "description": "Instantboard client",
  "main": "dist/index.js",
  "author": "khirayama",
  "engines": {
    "node": "8.5.0"
  },
  "scripts": {
    "start": "npm run server",
    "clean": "rm -rf dist",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "browserify ./src/index.web.tsx -g [ envify --NODE_ENV production ] -g uglifyify -p [tsify -p ./tsconfig.client.json] -p bundle-collapser/plugin | uglifyjs --compress --mangle > ./dist/public/bundle.js",
    "bundle:scripts:analyze": "rm -rf tmp* && NODE_ENV=production browserify --debug ./src/index.web.tsx -g [ envify --NODE_ENV production ] -g uglifyify -p [tsify -p ./tsconfig.client.json] -p bundle-collapser/plugin | uglifyjs --compress --mangle --source-map \"content=inline\" -o ./tmp.js && source-map-explorer tmp.js tmp.js.map",
    "bundle:scripts:watch": "watchify ./src/index.web.tsx -t envify -p [tsify -p ./tsconfig.client.json] -o ./dist/public/bundle.js",
    "build:styles": "postcss -c .postcssrc.js src/presentations/index.css -o dist/public/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/presentations/index.css -o dist/public/index.css",
    "copy:files": "cpx 'src/**/*.{json,woff2,png}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png}' dist",
    "server:dev": "browser-sync start --server dist --files dist/**/* --no-open --no-ui --no-ghost-mode --no-notify",
    "server": "nodemon dist/index.server.js",
    "build": "npm run clean && npm run compile:scripts && npm run build:styles && npm run bundle:scripts && npm run copy:files",
    "dev": "npm run clean && npm run compile:scripts && concurrently 'npm run compile:scripts:watch' 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'nodemon dist/index.server.js'",
    "lint": "tslint 'src/**/*.+(ts|tsx)'",
    "lint:fix": "tslint --fix 'src/**/*.+(ts|tsx)'",
    "lint:beta": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-path src/**/*.d.ts src",
    "lint:fix:beta": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-path src/**/*.d.ts --fix src",
    "check": "npm-check-updates"
  },
  "dependencies": {
    "@types/prop-types": "~15.5.2",
    "@types/react": "~16.0.25",
    "@types/react-dom": "~16.0.3",
    "axios": "~0.17.1",
    "browserify": "~14.5.0",
    "bundle-collapser": "~1.3.0",
    "classnames": "~2.2.5",
    "compression": "~1.7.1",
    "concurrently": "~3.5.0",
    "cookie-parser": "~1.4.3",
    "cpx": "~1.5.0",
    "cssnano": "~3.10.0",
    "envify": "~4.1.0",
    "eslint": "~4.11.0",
    "eslint-config-xo-react": "~0.14.0",
    "eslint-config-xo-space": "~0.17.0",
    "eslint-plugin-jsx-a11y": "~6.0.2",
    "eslint-plugin-react": "~7.4.0",
    "eslint-plugin-typescript": "~0.8.0",
    "fastify": "~0.35.0",
    "nodemon": "~1.12.1",
    "npm-check-updates": "~2.13.0",
    "postcss-cli": "~4.1.1",
    "postcss-easy-import": "~3.0.0",
    "postcss-nested": "~2.1.2",
    "postcss-simple-vars": "~4.1.0",
    "prop-types": "~15.6.0",
    "react": "~16.1.1",
    "react-dom": "~16.1.1",
    "react-transition-group": "~2.2.1",
    "serve-static": "~1.13.1",
    "source-map-explorer": "~1.5.0",
    "tsify": "~3.0.3",
    "tslint": "~5.8.0",
    "typescript": "~2.6.1",
    "typescript-eslint-parser": "~9.0.0",
    "uglify-es": "~3.1.9",
    "uglifyify": "~4.0.4",
    "watchify": "~3.9.0"
  }
}
